<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="¿A dónde quieres ir?"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:fontFamily="sans-serif-medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnBiblioteca"
            android:text="Biblioteca"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <Button
            android:id="@+id/btnAuditorio"
            android:text="Auditorio"
            android:backgroundTint="#1976D2"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <Button
            android:id="@+id/btnGym"
            android:text="Gym"
            android:backgroundTint="#388E3C"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <Button
            android:id="@+id/btnCafeteria"
            android:text="Cafetería"
            android:backgroundTint="#FBC02D"
            android:textColor="#212121"
            android:textAllCaps="false"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <Button
            android:id="@+id/btnCanchas"
            android:text="Canchas"
            android:backgroundTint="#00796B"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <Button
            android:id="@+id/btnSorJuana"
            android:text="Edificio Sor Juana"
            android:backgroundTint="#512DA8"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <Button
            android:id="@+id/btnBicentenario"
            android:text="Edificio Bicentenario"
            android:backgroundTint="#C2185B"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <Button
            android:id="@+id/btnRevolucion"
            android:text="Edificio Revolución"
            android:backgroundTint="#303F9F"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <Button
            android:id="@+id/btnNeza"
            android:text="Edificio Nezahualcóyotl"
            android:backgroundTint="#00796B"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <Button
            android:id="@+id/btnMorelos"
            android:text="Edificio Morelos"
            android:backgroundTint="#F57C00"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

    </LinearLayout>
</ScrollView>
