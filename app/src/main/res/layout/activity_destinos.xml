<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="¿A dónde quieres ir?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnBiblioteca"
            style="@style/RedButton"
            android:text="Biblioteca" />

        <Button
            android:id="@+id/btnAuditorio"
            style="@style/RedButton"
            android:text="Auditorio" />

        <Button
            android:id="@+id/btnGym"
            style="@style/RedButton"
            android:text="Gym" />

        <Button
            android:id="@+id/btnCafeteria"
            style="@style/RedButton"
            android:text="Cafetería" />

        <Button
            android:id="@+id/btnCanchas"
            style="@style/RedButton"
            android:text="Canchas" />

        <Button
            android:id="@+id/btnSorJuana"
            style="@style/RedButton"
            android:text="Edificio Sor Juana" />

        <Button
            android:id="@+id/btnBicentenario"
            style="@style/RedButton"
            android:text="Edificio Bicentenario" />

        <Button
            android:id="@+id/btnRevolucion"
            style="@style/RedButton"
            android:text="Edificio Revolución" />

        <Button
            android:id="@+id/btnNeza"
            style="@style/RedButton"
            android:text="Edificio Nezahualcóyotl" />

        <Button
            android:id="@+id/btnMorelos"
            style="@style/RedButton"
            android:text="Edificio Morelos" />

    </LinearLayout>
</ScrollView>
