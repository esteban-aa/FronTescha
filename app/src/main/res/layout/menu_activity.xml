<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="32dp">

        <!-- Logo o icono -->
        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/homed"
            android:contentDescription="Icono de menú"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Título -->
        <TextView
            android:id="@+id/menuTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menú"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FF5722"
            android:layout_marginBottom="32dp" />

        <!-- Texto usuario y rol -->
        <TextView
            android:id="@+id/usuarioTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenido, usuario"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Botones principales -->
        <Button
            android:id="@+id/btnMapaInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mapa de ubicaciones e información"
            android:backgroundTint="#FF5722"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnControlEscolar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horarios y ubicaciones de Control Escolar"
            android:backgroundTint="#FF5722"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnHorariosDocentes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horarios Docentes"
            android:backgroundTint="#FF5722"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnJefaturaCarrera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horarios y ubicación de Jefatura de Carrera"
            android:backgroundTint="#FF5722"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="32dp" />

        <!-- RecyclerView para lista usuarios (visible solo admin) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerUsuarios"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp" />

        <!-- Botones para admin -->
        <Button
            android:id="@+id/btnAgregarUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar usuario"
            android:backgroundTint="#FF5722"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />



        <!-- Ubicación actual -->
        <TextView
            android:id="@+id/currentLocationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubicación Actual: Chalco de Díaz Covarrubias"
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="32dp" />

        <!-- Botón cerrar sesión -->
        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar sesión"
            android:backgroundTint="#B00020"
            android:textColor="#FFFFFF"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
