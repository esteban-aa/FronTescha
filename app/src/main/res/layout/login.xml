<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/logotescha"
            android:contentDescription="Logo de TESCHA"
            android:layout_marginBottom="32dp" />

        <TextView
            android:id="@+id/loginTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar Sesión"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#FF5722"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/welcomeMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Bienvenido! Ingresa tus datos para continuar"
            android:textSize="16sp"
            android:textColor="#B0B0B0"
            android:layout_marginBottom="32dp"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/rolSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="#FF5722"
            android:popupBackground="#333333"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:spinnerMode="dropdown" />

        <EditText
            android:id="@+id/emailOrMatriculaInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Correo electrónico o Matrícula"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:backgroundTint="#FF5722"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:layout_marginBottom="32dp"
            android:importantForAutofill="no" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="INICIAR SESIÓN"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF5722"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/registerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿No tienes cuenta? Regístrate"
            android:textColor="#ff5733"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true" />


        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Olvidaste tu contraseña?"
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</ScrollView>
